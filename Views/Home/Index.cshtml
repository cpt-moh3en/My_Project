            @if (ViewBag.ok != null)
            {
                <div class="my-1 col-12 text-center">
                    <p class="alert alert-success"> @ViewBag.ok </p>
                </div>
            }
            @if (ViewBag.er != null)
            {
                <div class="my-1 col-12 text-center">
                    <p class="alert alert-danger"> @ViewBag.er </p>
                </div>
            }
          </div>
        </div>
        <div class="col-md-12 col-sm-12">
          <div class="col-md-4 col-sm-6" style="padding-left:0px;">
            <h3 class="cont-title fo-pa"> ارسال پیام </h3>
            @* <div id="sendmessage">Your message has been sent. Thank you!</div> *@
            @* <div id="errormessage"></div> *@
            <div class="contact-info">
              <form asp-action="Message" asp-controller="Home" method="POST" role="form" class="contactForm" autocomplete="off">
                <div class="form-group">
                  <input type="text" class="form-control" asp-for="NameFamily" placeholder=" نام و نام خانوادگی : " data-rule="minlen:4" data-msg=" لطفا حداقل 4 کاراکتر وارد کنید...! " required/>
                  <div class="validation"></div>
                </div>
                <div class="form-group">
                  <input type="email" class="form-control" asp-for="Email" placeholder=" ایمیل : " data-rule="email" data-msg=" لطفا یک ایمیل معتبر وارد کنید...! " required/>
                  <div class="validation"></div>
                </div>
                <div class="form-group">
                  <input type="text" class="form-control"asp-for="Subject" placeholder=" موضوع : " data-rule="minlen:4" data-msg=" لطفا حداقل 8 کاراکتر موضوع را وارد کنید...! " required/>
                  <div class="validation"></div>
                </div>
                <div class="form-group">
                  <textarea class="form-control" asp-for="UserMessage" rows="5" data-rule="required" data-msg=" لطفا پیامی برای ما بنویسید...! " required placeholder=" پیام شما :  "></textarea>
                  <div class="validation"></div>
                </div>
                <div class="form-group text-center">
                  <button type="submit" class="btn btn-send"> ارسال </button>
                </div>
              </form>
            </div>
          </div>
          <div class="col-md-4 col-sm-6">
            <h3 class="cont-title fo-pa"> ملاقات با ما </h3>
